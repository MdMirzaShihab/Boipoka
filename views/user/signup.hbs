<div class="container">
  <div class="userlogo">
    <img src="/images/kisspng-ink-watercolor-painting-color-splash-5abb22d7dd56c0.7466740015222135919066 copy.png" alt="">

  </div>
  <div class="well">
    <h2 class="signup"><i class="fas fa-sign-in-alt"></i> Sign up</h2>
    <br>
    {{#if hasErrors}}
      <div class="alert alert-danger">
        {{# each messages }}
          <p>{{this}}</p>
          {{/each}}
      </div>
    {{/if}}
    <form class="" action="/user/signup" method="post">

      <div class="input-group signup">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input id="email" type="email" class="form-control" name="email" value="" placeholder="Email">
      </div>

      <div class="input-group signup">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <input id="password" type="password" class="form-control" name="password" value="" placeholder="Password">
      </div>
      <input type="hidden" name="_csrf" value="{{csrfToken}}">

      <button type="submit" class="btn btn-outline-warning signup" id="submit">Signup</button>
    </form>
  </div>

</div>
